{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2020",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noImplicitThis": false,
    "baseUrl": ".",
    "paths": {
      "@jote/ast-stringify": ["libs/ast-stringify/src/index.ts"],
      "@jote/docx-parse": ["libs/docx-parse/src/index.ts"],
      "@jote/rejour": ["libs/rejour/src/index.ts"],
      "@jote/rejour-move-abstract": ["libs/rejour-move-abstract/src/index.ts"],
      "@jote/rejour-parse": ["libs/rejour-parse/src/index.ts"],
      "@jote/utils": ["libs/utils/src/index.ts"],
      "jast-stringify": ["libs/jast-stringify/src/index.ts"],
      "rejour-stringify": ["libs/rejour-stringify/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
